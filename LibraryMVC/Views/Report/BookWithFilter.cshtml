@model IList<WebModelServices.ReportsModel.ViewModel.BookWithFilterViewModel>

@(Html.Kendo().Grid(Model)
        .Name("BookWithFilterGrid")
        .Columns(columns =>
        {
            columns.Bound(c => c.Author).Filterable(false)
              .Width(240);
            columns.Bound(c => c.Title).Filterable(false);
            columns.Bound(c => c.BorrowCount).Width(240).Filterable(false);
            columns.Bound(c => c.AddDate).Width(240).Filterable(false).Format("{0: yyyy-MM-dd HH:mm:ss}");

        })
        .HtmlAttributes(new { style = "height: 500px;" })
        .DataSource(dataSource => dataSource
        .Custom()
        .Batch(true)
        .Schema(schema => schema
        
            .Model(model => {
                model.Id("BookId");
                model.Field("Title", typeof(string));
                model.Field("Author", typeof(string));
                model.Field("BorrowCount", typeof(int));
                model.Field("AddDate", typeof(DateTime));
        })))
        .Scrollable()
        .Groupable()
        .Sortable()
        .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(10))

)
